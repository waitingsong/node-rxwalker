{
  "name": "rxwalker",
  "author": "waiting",
  "version": "5.0.1",
  "description": "A simple directory tree walker by rxjs",
  "keywords": [
    "fs",
    "filesystem",
    "readdir",
    "rxjs",
    "utils",
    "walkdir",
    "walker"
  ],
  "bin": {},
  "browser": "",
  "es2015": "./dist/rxwalker.esm.js",
  "main": "./dist/index.cjs.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bugs": {
    "url": "https://github.com/waitingsong/node-rxwalker/issues"
  },
  "homepage": "https://github.com/waitingsong/node-rxwalker#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/waitingsong/node-rxwalker.git"
  },
  "license": "MIT",
  "dependencies": {
    "rxjs": "^7.4.0"
  },
  "devDependencies": {
    "@commitlint/cli": "15",
    "@commitlint/config-conventional": "15",
    "@rollup/plugin-commonjs": "21",
    "@rollup/plugin-node-resolve": "13",
    "@types/mocha": "9",
    "@types/node": "16",
    "@types/power-assert": "1",
    "@types/rewire": "2",
    "@types/rimraf": "3",
    "@types/yargs": "17",
    "@waiting/eslint-config": "^7.1.0",
    "@waiting/shared-core": "^15.1.0",
    "coveralls": "3",
    "cross-env": "7",
    "eslint": "8",
    "espower-typescript": "10",
    "intelli-espower-loader": "1",
    "mocha": "9",
    "mocha-lcov-reporter": "1",
    "power-assert": "1",
    "rewire": "5",
    "rimraf": "3",
    "rollup-plugin-terser": "7",
    "rxrunscript": "6",
    "ts-node": "^10.4.0",
    "tsconfig-paths": "3",
    "typescript": "^4.5.0",
    "yargs": "17"
  },
  "engines": {
    "node": ">=16.13.0"
  },
  "files": [
    "src/**/*.ts",
    "dist"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "scripts": {
    "bp:add": "git remote add bp https://github.com.cnpmjs.org/waitingsong/npm-base",
    "bp:sync": "git fetch --all -v && git pull origin && git merge bp/main -m \"Merge remote-tracking branch 'bp/main'\" ",
    "bp:syncxo": "git fetch --all -v && git pull origin && git merge bp/main -m \"Merge remote-tracking branch 'bp/main'\" -Xours",
    "build": "npm run tsc && npm run rp",
    "clean": "npm run clean:lock & npm run clean:cache & rm -rf dist/* -rf",
    "clean:cache": "rm -rf .eslintcache .vscode/.tsbuildinfo .vscode/.tsbuildinfo.*",
    "clean:lock": "rm package-lock.json -f",
    "cov": "cross-env TS_NODE_PROJECT=test/tsconfig.json c8 mocha --parallel=false",
    "doc": "typedoc src/index.ts src/lib/index.ts src/lib/model.ts",
    "lint": "eslint --fix --cache {src,test}/**/*.ts",
    "lint:nofix": "eslint --cache {src,test}/**/*.ts",
    "postinstall": "npm run repo:init",
    "postpublish": "git push origin --follow-tags",
    "prepublishOnly": "npm run clean && npm run build",
    "purge": "npm run clean & rm node_modules -rf & rm package-lock.json -f",
    "refresh": "npm i && npm run build",
    "release": "standard-version -r",
    "release:first": "standard-version --first-release",
    "repo:init": "bash .githooks/init-repo.sh",
    "rp": "rollup -c rollup.config.js",
    "rp:w": "npm run tsc:w | rollup -wc rollup.config.js",
    "test": "cross-env TS_NODE_PROJECT=test/tsconfig.json mocha",
    "test:browser": "cd .config && npm run browser && cd ..",
    "browser:debug": "cd .config && npm run debug && cd ..",
    "tsc": "tsc -p tsconfig.json",
    "tsc:w": "tsc -p tsconfig.json -w"
  }
}
